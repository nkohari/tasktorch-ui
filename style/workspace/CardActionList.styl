.actions
  margin: 10px
  border: 1px solid #ccc
  border-radius: 4px
  background: $bright-white
  
  .stage
    border-bottom: 1px solid #ccc
    padding: 10px
    transition: all 1s ease-in-out
    &:last-child { border-bottom: none }
    
    .title
      font-size: 16px
      font-weight: $bold-font-weight
      margin-bottom: 4px
      
  ul
    margin: 0
    padding: 0
    
    li
      list-style-type: none
    
    .placeholder
      height: 30px
      visibility: normal
      background: $drop-indicator-background-color
