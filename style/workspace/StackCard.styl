.stack-card
  position: relative;
  background: #fff
  border: 1px solid #bbb
  margin-bottom: 4px;
  transition: border $activate-animation-delay linear;
  &:last-child { margin-bottom: 0 }
  &.active { border: 1px solid #888 }
  &.dragging { box-shadow: 0 0 3px $shadow-color }
      
  .top
    padding: 4px 8px;
    background: linear-gradient(to bottom, #fff, #eee)
    border-bottom: 1px solid #ddd;
    .title
      color: $text-color
      font-size: 14px
      font-weight: 600
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
    .handoff
      font-size: 11px
      color: #999
        
  .bottom
    height: 51px
    margin: 8px;
    overflow: hidden
    color: $very-subtle-text-color;
    font-size: 13px
    line-height: 17px
