.stack-card
  cursor: grab
  border: 1px solid transparent
  border-left: 6px solid transparent
  border-radius: 4px
  background: #fff
  margin-bottom: 4px
  &:last-child
    margin-bottom: 0
  &.dragging
    box-shadow: -2px 2px 4px rgba(0, 0, 0, 0.3)
    
  .body
    padding: 6px 8px
    
    .top
      padding: 2px 0px
      .title
        color: $stack-card-title-color
        font-size: 14px
        font-weight: 600
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
      .handoff
        font-size: 11px
        color: #999
        em
          font-style: normal
          color: #666
          
    .bottom
      overflow: hidden
      padding-top: 6px
      margin-top: 6px
      border-top: $stack-card-contextual-border
      color: $stack-card-contextual-color
      font-size: 13px
      line-height: 17px
      height: 57px
