.card > .header
  flex: none
  z-index: 1000
  border-bottom: 6px solid
  background: $steel-normal-color
  &.expanded
    .fixed { border-bottom: 1px solid $steel-light-border-color }

  .fixed
    position: relative
    z-index: 1001
    padding: 8px
    background: linear-gradient(to bottom, $steel-highlight-color, $steel-lowlight-color)
    
  .flexible
    z-index: 1000
    overflow: hidden
  
  .owner
    position: absolute
    top: 8px
    left: 8px
    height: 54px
    width: 54px
    padding: 2px
    border: 1px solid $steel-light-border-color
    border-radius: 50%
    background: $bright-white
    &.team
      background: $steel-highlight-color
    .icon
      color: $steel-light-border-color;
      font-size: 72px;
      line-height: 44px;
      margin-top: 0;
      width: 48px;
  
  .info
    width: 100%
    padding-left: 58px
    padding-right: 24px

  .title
    font-size: 22px
    input
      text-overflow: ellipsis
      white-space: nowrap
      font-weight: $bold-font-weight
      color: $text-color
          
  .widgets
    list-style-type: none
    padding: 0
    margin: 0 0 6px 0
    li
      display: inline-block
      margin-right: 10px
      font-size: 14px
      color: $subtle-text-color
      a
        color: $subtle-text-color
        text-decoration: none
        transition: color $hover-animation-delay linear
        &:visited { color: $subtle-text-color }
        &:hover { color: $text-color }
          
  .commands
    padding: 4px 0 0 0
    width: 100%
    button { font-weight: $bold-font-weight }

.card.archived, .card.deleted
  & > .header
    .fixed
      background: linear-gradient(to top right, highlight(0.5) 25%, transparent 25%, transparent 50%, highlight(0.5) 50%, highlight(0.5) 75%, transparent 75%, transparent);
      background-size: 16px 16px
