.card > .header
  flex: none
  position: relative
  z-index: 1000
  border-bottom: 6px solid
  &.expanded
    .fixed { border-bottom: 1px solid $steel-light-border-color }

  .fixed
    position: relative
    z-index: 1001
    padding: 8px
    background: linear-gradient(to bottom, $steel-highlight-color, $steel-lowlight-color)
    
  .flexible
    z-index: 1000
    background: $steel-normal-color
  
  .avatar
    position: absolute
    top: 8px
    left: 8px
    height: 54px
    width: 54px
    padding: 2px
    border: 1px solid $steel-light-border-color
    border-radius: 50%
    background: $bright-white
  
  .info
    width: 100%
    padding-left: 58px
    padding-right: 24px

  .title
    font-size: 22px
    input
      text-overflow: ellipsis
      white-space: nowrap
      font-weight: $bold-font-weight
      color: $text-color
          
  .widgets
    list-style-type: none
    padding: 0
    margin: 0 0 6px 0
    li
      display: inline-block
      margin-right: 10px
      a
        font-size: 14px
        color: $subtle-text-color
        text-decoration: none
        transition: color $hover-animation-delay linear
        &:visited { color: $subtle-text-color }
        &:hover { color: $text-color }
          
  .commands
    padding: 4px 0 0 0
    width: 100%
    button { font-weight: $bold-font-weight }
