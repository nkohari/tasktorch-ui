.card > .header
  flex: none
  position: relative
  z-index: 1000
  border-bottom: 6px solid
  &.expanded
    .fixed { border-bottom: 1px solid $steel-light-border-color }

  .fixed
    position: relative
    z-index: 1001
    padding: 6px
    background: linear-gradient(to bottom, $steel-highlight-color, $steel-lowlight-color)
    
  .flexible
    z-index: 1000
    background: $steel-normal-color
    
  .title
    color: $text-color
    font-size: 22px
    font-weight: $bold-font-weight
    margin-right: 24px
    input
      text-overflow: ellipsis
      white-space: nowrap
      
  .widgets
    list-style-type: none
    padding: 0
    margin: 0 0 4px 0
    li
      display: inline-block
      margin-right: 10px
      a
        font-size: 13px
        color: $very-subtle-text-color
        text-decoration: none
        transition: color $hover-animation-delay linear
        &:visited { color: $very-subtle-text-color }
        &:hover { color: $text-color }
          
  .commands
    padding: 4px
    width: 100%
    button { font-weight: $bold-font-weight }
