.actions
  margin: 10px
  border: 1px solid #ccc
  background: $bright-white
  
  .stage
    border-bottom: 1px solid #ccc
    &:last-child { border-bottom: none }
    
    .title
      padding: 10px
      background: $steel-highlight-color
      font-size: 16px
      font-weight: $bold-font-weight
      border-bottom: 1px solid #ccc
    
    .name
      font-size: 16px
    
    .stage-controls
      float: right
      opacity: 0
      transition: opacity $hover-animation-delay ease-in-out
    
    &:hover
      .stage-controls
        opacity: 1
      
  ul
    margin: 10px
    padding: 0
    min-height: 20px
    
    li
      list-style-type: none
    
    .drag-placeholder
      height: 30px
      visibility: normal
      background: $drop-indicator-background-color
