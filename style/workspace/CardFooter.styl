.card > .footer
  flex: none
  position: relative
  z-index: 1000
  box-shadow: 0 -1px $shadow-blur $shadow-color
  padding: 8px 10px
  background: linear-gradient(to bottom, $steel-highlight-color, $steel-lowlight-color)
  border-top: 1px solid $steel-light-border-color
  line-height: 0
      
  .participants
    display: inline-block
    vertical-align: middle
    padding: 0
    margin: 0
    list-style-type: none
    line-height: 0
    
    .participant
      display: inline-block
      padding: 2px
      .avatar { border-radius: 50% }
