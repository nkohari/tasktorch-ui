.actions
  display: flex
  flex-direction: column
  position: absolute
  width: 100%
  min-height: 100%
  
  .stage
    flex: none
    display: flex
    flex-direction: row
    border-bottom: 1px solid #ccc
    
    &:last-child
      border-bottom: none
      flex: 1
    
    .title
      flex: none
      width: 100px
      padding: 10px
      text-align: right
      font-size: 12px
      font-weight: $heavy-font-weight
      text-transform: uppercase
      background: $steel-highlight-color
      border-left: 1px solid #ccc
    
      .stage-controls
        opacity: 0
        padding-top: 10px
        transition: opacity $hover-animation-delay ease-in-out
      
      &:hover
        .stage-controls { opacity: 1 }
      
  ul
    margin: 0
    padding: 0
    flex: 1
    
    li
      list-style-type: none
      padding: 4px
      border-bottom: 1px dotted #ccc
      &:last-child
        border-bottom: none
    
    .drag-placeholder
      height: 30px
      visibility: normal
      background: $drop-indicator-background-color
