.stage-list
  flex: 1
  display: flex
  flex-direction: column
  overflow-y: auto
  
  .stage
    flex: none
    border-bottom: 1px solid #ccc
    
    &:last-child
      border-bottom: none
      flex: 1
    
    .title
      padding: 4px 10px
      color: #999
      font-size: 12px
      font-weight: $heavy-font-weight
      text-transform: uppercase
      background: $steel-highlight-color
      border-bottom: 1px solid #ccc
    
      .stage-controls
        float: right
        opacity: 0
        transition: opacity $hover-animation-delay ease-in-out
      
      &:hover
        .stage-controls { opacity: 1 }
      
    .action-list
      margin: 0
      padding: 0
      
      .action-list-item
        list-style-type: none
        padding: 4px
        border-bottom: 1px dotted #ccc
    
    .create-action
      padding: 4px 4px 4px 30px
      height: 35px
      
      a
        display: block
        font-size: 14px
        font-style: italic
        line-height: 28px
        color: #666
        &:hover, &:active
          color: $black
      
      input
        display: inline-block
        width: $card-panel-width - 125px
        padding: 2px
        outline: none !important
        margin-bottom: 2px
      
      .buttons
        display: inline-block
        vertical-align: top
        padding: 1px 0 0 4px
    
    .drag-placeholder
      height: 30px
      visibility: normal
      background: $drop-indicator-background-color
