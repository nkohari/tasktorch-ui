.timeline
  position: relative
  flex: 1
  overflow-y: auto
  font-size: 14px
  z-index: 0
  
  &::before
    display: block
    content: ""
    position: absolute
    top: 0
    bottom: 0
    left: 64px
    width: 1px
    background: #ddd
    z-index: -1
  
  .comment
    position: relative
    margin-top: 10px
    padding: 0 10px 0 50px
    border-top: 2px solid #fff
    border-bottom: 2px solid #fff
    z-index: 1
    
    &::before, &::after
      display: block
      position: absolute
      width: 0px
      height: 0px
      content: " "
      border: 6px solid transparent
    
    &::before
      top: 9px
      left: 38px
      border-right-color: #aaa
    
    &::after
      top: 9px
      left: 45px
      border-left-width: 0
      border-right-color: #f3f3f3
    
    .comment-user
      display: block
      float: left
      width: 32px
      height: 32px
      margin-left: -42px
      border-radius: 4px

    .comment-body
      position: relative
      border: 1px solid #ccc
      background: #fff
    
    .comment-header
      background: #f3f3f3
      padding: 4px 6px
      border-bottom: 1px solid #ccc

      .user
        font-size: 12px
        font-weight: $bold-font-weight
        line-height: 14px
        color: #666
      
      time
        float: right
        font-size: 10px
        font-weight: $bold-font-weight
        line-height: 16px
        color: #aaa

    .comment-content
      padding: 6px
  
  .activity
    padding-top: 10px
    margin-left: 51px
    font-size: 14px
    
    .icon
      display: block
      float: left
      width: 28px
      height: 28px
      color: #666
      background: #eee
      border: 2px solid #fff
      border-radius: 50%
      font: 24px/24px $icon-font
      margin-right: 4px
    
    .activity-body
      min-height: 30px
      line-height: 20px
      padding-top: 3px
    
      .activity-user
        font-weight: 500
        
        .avatar
          display: inline-block
          vertical-align: top
          margin-right: 4px
          width: 16px
          height: 16px
          border-radius: 2px
          
      .activity-change-toggle
        font-style: italic
        color: #999
        margin-left: 4px
        &::before { content: "(" }
        &::after { content: ")" }

      .activity-change
        margin: 0 8px 0 24px
      
        .activity-change-item
          display: table-row
        
        .activity-change-label
          display: table-cell
          width: 30px
          padding-right: 10px
          font-weight: 500
        
        .activity-change-value
          display: table-cell
