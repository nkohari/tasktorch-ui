.card
  border: 1px solid $panel-border-color
  background: $panel-background-color
  width: $card-panel-width
  min-width: $card-panel-width
  z-index: $panel-layer

  .body
    position: relative
    flex: 1
    display: flex
    flex-direction: column
    background: $bright-white
    
    .summary
      flex: none
      min-height: 0px
      .contents
        max-height: 300px
        overflow-y: auto
        padding: 8px 8px 4px 8px
        font-size: 18px
        font-weight: $normal-font-weight
        line-height: 22px
    
    .details
      flex: 1
      min-height: 100%
      display: flex
      flex-direction: column
      .header
        flex: none
        min-height: 0px
      .content
        flex: 1
        min-height: 100%

@keyframes card-enter
  0%
    opacity: 0
    margin-left: -($card-panel-width + $panel-margin)
    margin-right: $panel-margin
  50%
    opacity: 0
    margin-left: -($card-panel-width + $panel-margin)
    margin-right: $card-panel-width + $panel-margin
  100%
    opacity: 1
    margin-left: 0
    margin-right: $panel-margin

.card.slide-enter
  animation: card-enter 250ms ease-out
  z-index: $panel-animation-layer

@keyframes card-leave
  from
    opacity: 1
    margin-left: 0
  to
    opacity: 0
    margin-left: -($card-panel-width + $panel-margin)

.card.slide-leave
  animation: card-leave 200ms linear
  z-index: $panel-animation-layer
