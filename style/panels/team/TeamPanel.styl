.team.panel
  flex: 1
  margin-right: 0px
  background: $panel-background-color
  border: 1px solid $panel-border-color
  z-index: $panel-layer
  
  & > .header
    font-size: 14px
    font-weight: $bold-font-weight
    color: $black
    background: linear-gradient(to bottom, #eee, #ccc)
    overflow: hidden
    padding: 8px 6px
    border-bottom: 1px solid $panel-border-color
    
    .title
      display: inline-block
      padding-left: 2px

  & > .footer
    padding: 8px 10px
    background: linear-gradient(to bottom, $steel-highlight-color, $steel-lowlight-color)
    border-top: 1px solid $steel-light-border-color
      
  .columns
    width: 100%
    height: 100%
    display: flex
    flex-direction: row
    overflow-x: auto
    