.kind-template-list
  flex: 1
  border: 1px solid $color-steel
  background: $color-white
  
  &.disabled
    opacity: 0.6
    pointer-events: none
  
  .kind-template
    cursor: pointer
    display: flex
    flex-direction: row
    padding: 10px
    background: $color-white
    border-bottom: 1px solid $color-steel-light
    &.selected { background: $color-selection }
    &:focus
      outline: 3px solid $color-steel
  
    & > i
      margin-right: 6px
      for $name, $color in $semantic-colors-foreground
        &.{$name}
          color: $color
  
    .template-info
      flex: 1
      
      .template-name
        font-size: 16px
        font-weight: $bold-font-weight
      
      .template-description
        font-size: 14px
        font-style: italic
        font-weight: $bold-font-weight
        color: $color-ink-light
