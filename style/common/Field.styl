@import '../theme.styl'

.field
  display: flex
  flex-direction: column
  margin-bottom: 10px
  font-size: 16px
  &:last-child { margin-bottom: 0 }
  &.expand { flex: 1 }
  
  .field-label
    display: block
    margin-bottom: 8px
    font-weight: $bold-font-weight
  
  .field-input
    flex: 1
    display: flex
    flex-direction: column
    margin-bottom: 8px

  .hint
    font-size: 15px
    font-style: italic
    font-weight: $bold-font-weight
    color: $color-ink-light
    line-height: 20px
