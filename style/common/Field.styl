.field
  display: flex
  flex-direction: column
  margin-bottom: 10px
  font-size: 16px
  &:last-child { margin-bottom: 0 }
  &.expand { flex: 1 }
  
  .field-label
    display: block
    margin-bottom: 8px
    font-weight: 500
  
  .field-input
    flex: 1
    display: flex
    flex-direction: column

  .hint
    margin-top: 8px
    font-size: 14px
