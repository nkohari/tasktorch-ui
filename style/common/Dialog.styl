a.trigger
  cursor: pointer

.dialog-backdrop
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: $floating-layer
  background: black(70%)
  &.fade-enter { animation: dialog-enter 150ms ease-out }
  &.fade-leave { animation: dialog-leave 150ms linear }

.dialog
  position: relative
  top: 50%
  margin: 0px auto
  background: $color-paper
  border: 3px solid $color-charcoal-light
  box-shadow: 0px 0px 5px black(50%)

.dialog-header
  padding: 8px 10px
  background: $color-steel
  font-weight: $bold-font-weight
  border-bottom: 1px solid $color-steel-dark
  i { margin-right: 6px }

.dialog-content
  padding: 10px
  font-size: 16px
  line-height: 20px

.dialog-buttons
  display: flex
  justify-content: flex-end
  padding-top: 10px

@keyframes dialog-enter
  from
    opacity: 0
  to
    opacity: 1

@keyframes dialog-leave
  from
    opacity: 1
  to
    opacity: 0
