a.trigger
  cursor: pointer

.dialog-backdrop
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: $floating-layer
  background: black(70%)
  display: flex
  align-items: center
  justify-content: center
  &.fade-enter { animation: dialog-enter 150ms ease-out }
  &.fade-leave { animation: dialog-leave 150ms linear }

.dialog
  background: $color-paper
  border: 3px solid $color-charcoal-light
  box-shadow: 0px 0px 5px black(50%)
  display: flex
  flex-direction: column

.dialog-header
  flex: none
  padding: 8px 10px
  background: $color-steel
  font-weight: $heavy-font-weight
  border-bottom: 1px solid $color-steel-dark
  i { margin-right: 6px }

.dialog-content
  flex: 1
  padding: 10px
  font-size: 16px
  line-height: 20px

.dialog-buttons
  flex: none
  display: flex
  justify-content: flex-end
  padding: 10px
  background: $color-steel-verylight
  border-top: 1px solid $color-steel

@keyframes dialog-enter
  from
    opacity: 0
  to
    opacity: 1

@keyframes dialog-leave
  from
    opacity: 1
  to
    opacity: 0
