$arrow-width = 5px
$overlay-text-color = $white
$overlay-arrow-color = $black
$overlay-background-color = $black
$overlay-border-color = $black

.overlay
  position: absolute
  z-index: $overlay-zindex
  display: block
  background: $overlay-background-color
  border: 1px solid $overlay-border-color
  border-radius: 4px

  .content
    padding: 4px 8px
    font-size: 14px
    color: $overlay-text-color

  .arrow, .arrow:after
    position: absolute
    width: 0
    height: 0
    border: $arrow-width solid transparent
  
  .arrow:after
    content: " "
    
  &.top
    margin-top: -($arrow-width)
    .arrow
      bottom: -($arrow-width)
      left: 50%
      margin-left: -($arrow-width)
      border-bottom-width: 0
      border-top-color: $overlay-border-color
      &:after
        bottom: 1px
        margin-left: -($arrow-width)
        border-bottom-width: 0
        border-top-color: $overlay-arrow-color

  &.right
    margin-left: $arrow-width
    .arrow
      top: 50%
      left: -($arrow-width)
      margin-top: -($arrow-width)
      border-left-width: 0
      border-right-color: $overlay-border-color
      &:after
        left: 1px
        bottom: -($arrow-width)
        border-left-width: 0
        border-right-color: $overlay-arrow-color

  &.bottom
    margin-top: $arrow-width
    .arrow
      top: -($arrow-width)
      left: 50%
      margin-left: -($arrow-width)
      border-top-width: 0
      border-bottom-color: $overlay-border-color
      &:after
        top: 1px
        margin-left: -($arrow-width)
        border-top-width: 0
        border-bottom-color: $overlay-arrow-color

  &.left
    margin-left: -($arrow-width)
    .arrow
      top: 50%
      right: -($arrow-width)
      margin-top: -($arrow-width)
      border-right-width: 0
      border-left-color: $overlay-border-color
      &:after
        right: 1px
        bottom: -($arrow-width)
        border-right-width: 0
        border-left-color: $overlay-arrow-color
 
@keyframes overlay-enter
  from { opacity: 0; transform: translateY(10px) }
  to   { opacity: 1; transform: translateY(0) }

.overlay.slide-enter
  animation: overlay-enter 50ms ease-out

@keyframes overlay-leave
  from { opacity: 1; transform: translateY(0) }
  to   { opacity: 0; transform: translateY(10px) }

.overlay.slide-leave
  animation: overlay-leave 50ms linear
