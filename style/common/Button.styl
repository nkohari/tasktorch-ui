$button-border-radius = 4px

button, a.button
  position: relative
  display: inline-block
  vertical-align: top
  font-size: 14px
  line-height: 18px
  padding: 6px 10px
  color: $color-ink
  border: 1px solid $color-steel-dark
  border-radius: $button-border-radius
  margin-right: 4px
  background: linear-gradient(to bottom, $color-white, $color-steel)
  outline: none !important
  box-shadow: 0 1px 0 black(10%)
  text-decoration: none
  font-weight: $bold-font-weight
  
  i
    line-height: 16px
    margin-right: 6px
  
  &.small
    font-size: 12px
    line-height: 18px
    padding: 2px 4px
    i
      font-size: 12px
      width: 18px
      margin-right: 0
  
  &.icon-only
    padding: 6px
    i { margin-right: 0 }
  
  &.warning
    border-color: $warning-border-color
    background: linear-gradient(to bottom, $warning-highlight-color, $warning-lowlight-color)
    &:active, &.active { background: $warning-normal-color }
  
  &:active, &.active
    background: $color-steel-light
    box-shadow: inset 0px 0px 3px black(30%)
    
  &:disabled
    color: $color-ink-subtle
    background: $color-steel
    box-shadow: none
  
  &:last-child
    margin-right: 0

.button-group
  display: inline-block
  vertical-align: middle
  &.right { float: right }

  button
    border-right: 0
    margin-right: 0
    border-radius: 0
    &:first-child
      border-top-left-radius: $button-border-radius
      border-bottom-left-radius: $button-border-radius
    &:last-child
      border-right: 1px solid $color-steel-dark
      border-top-right-radius: $button-border-radius
      border-bottom-right-radius: $button-border-radius

.menu-button
  position: relative
  display: inline-block
  vertical-align: top
  
  button, a.button
    padding-right: 24px
