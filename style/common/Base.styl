html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

@font-face
  font-family: 'Entypo'
  src: url('/dist/entypo.woff')

body
  font-family: $font
  height: 100%
  width: 100%
  margin: 0
  padding: 0
  background: url(/dist/background.jpg)
  overflow: hidden

.screen
  padding-top: $header-height
  width: 100%
  height: 100%
  overflow: hidden
  .content
    display: flex
    height: 100%
    padding: 10px
    margin-left: $sidebar-width
    overflow-x: auto
    overflow-y: hidden
    &::-webkit-scrollbar
      height: 20px
    &::-webkit-scrollbar-track
      background: transparent
    &::-webkit-scrollbar-thumb
      background: rgba(0, 0, 0, 0.3)
      background-clip: content-box
      border: 5px solid transparent
      border-radius: 20px
 
@keyframes screen-navigate-enter
  from { opacity: 0 }
  to   { opacity: 1 }

.screen.navigate-enter
  animation: screen-navigate-enter 1000ms ease-out

@keyframes screen-navigate-leave
  from { opacity: 1 }
  to   { opacity: 0 }

.screen.navigate-leave
  animation: screen-navigate-leave 200ms linear
