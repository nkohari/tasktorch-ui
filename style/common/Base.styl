html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

@font-face
  font-family: 'Entypo'
  src: url('/dist/entypo.woff')

body
  font-family: $font
  height: 100%
  width: 100%
  margin: 0
  padding: 0
  background: url(/dist/background.jpg)
  overflow: hidden

.screen
  padding-top: 54px
  width: 100%
  height: 100%
  overflow: hidden
  .content
    display: flex
    height: 100%
    padding: 10px
    margin-left: $sidebar-width
    overflow-x: auto
    overflow-y: hidden
    &::-webkit-scrollbar
      height: 20px
    &::-webkit-scrollbar-track
      background: transparent
    &::-webkit-scrollbar-thumb
      background: rgba(0, 0, 0, 0.3)
      background-clip: content-box
      border: 5px solid transparent
      border-radius: 20px
  
.content > .panel
  position: relative
  flex: none
  height: 100%
  display: flex
  flex-direction: column
  vertical-align: top
  overflow: hidden
  box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.5)
  margin-right: $panel-margin
