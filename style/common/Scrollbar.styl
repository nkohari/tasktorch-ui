@import '../theme.styl'

::-webkit-scrollbar
  width: 10px
  height: 10px
  
::-webkit-scrollbar-track
  background: white(30%)
  &:horizontal { border-top:  1px solid $color-steel-light }
  &:vertical   { border-left: 1px solid $color-steel-light }
  
::-webkit-scrollbar-thumb
  background: black(20%)
  background-clip: content-box
  border: 3px solid transparent
  border-radius: 10px
