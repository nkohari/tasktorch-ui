.editable
  cursor: default;
  border: $editable-text-border
  background: transparent
  transition-property: border, background, box-shadow
  transition-duration: 0.1s
  transition-timing-function: ease-in-out
  &.dirty
    border: $editable-text-dirty-border !important
  &:hover
    background: $editable-text-hover-background
    border: $editable-text-hover-border
  &:focus
    cursor: text;
    background: $editable-text-active-background
    border: $editable-text-active-border
    outline: none !important
    box-shadow: $editable-text-active-shadow

textarea.editable
  overflow: hidden;
  width: 100%;
  padding: 4px;
  resize: none;

input.editable
  padding: 2px
  width: 100%
