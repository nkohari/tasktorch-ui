@import '../theme.styl'

.progress-bar
  display: flex
  flex-direction: row
  width: 100%
  height: 14px
  overflow: hidden
  background: $color-white
  border: 1px solid $color-steel-verydark
  border-radius: 10px
  margin-top: 2px
  padding: 2px
  
  .progress-bar-segment
    height: 100%
    
    &:first-child
      border-top-left-radius: 10px
      border-bottom-left-radius: 10px
    
    &:last-child
      border-top-right-radius: 10px
      border-bottom-right-radius: 10px
