.progress-bar
  display: flex
  flex-direction: row
  width: 100%
  height: 12px
  overflow: hidden
  background: $color-white
  border: 1px solid $color-steel-verydark
  border-radius: 10px
  margin-top: 3px
  padding: 1px
  
  .progress-bar-segment
    height: 100%
    
    &:first-child
      border-top-left-radius: 10px
      border-bottom-left-radius: 10px
    
    &:nth-last-child(2)
      border-top-right-radius: 10px
      border-bottom-right-radius: 10px
