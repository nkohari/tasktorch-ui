.drawer-container
  height: 100%

.drawer
  flex: none
  height: 100%
  width: $drawer-width
  margin: 0
  padding: 6px
  overflow-y: auto
  overflow-x: visible
  background: $drawer-background-color

  .tab-block
    
    & > .header
      font-size: 13px
      display: flex
      flex-direction: row
      .tab
        flex: 1
        text-align: center

  .drawer-group
    
    .header
      display: flex
      flex-direction: row
      padding: 8px 6px
      
      .title
        flex: 1
        font-size: 13px
        font-weight: $bold-font-weight
        color: $drawer-header-text-color
        text-transform: uppercase
      
      .trigger
        flex: none
        cursor: pointer
        color: #111
        line-height: 18px
        transition-property: color
        transition-duration: $hover-animation-delay
        &:hover, &.active { color: $drawer-header-text-color }
        & > .icon { width: auto }
  
  .drawer-item
    display: block
    font-size: 14px
    line-height: 20px
    padding: 4px
    margin-bottom: 6px
    color: $drawer-text-color
    border-radius: 4px
    text-decoration: none
    transition-property: color, background
    transition-duration: $hover-animation-delay
    
    &:hover, &:active
      color: $drawer-active-text-color
      .icon { color: $drawer-active-text-color }
      .count { color: $drawer-active-text-color }
    
    &.active
      color: $drawer-active-text-color
      background: $drawer-active-background-color
      .icon { color: $drawer-active-text-color }
      .count { color: $drawer-active-text-color }

    .icon
      margin-right: 4px

    .count
      min-width: 30px
      margin-top: 2px
      margin-left: 10px
      float: right
      padding: 3px 7px
      background: #111
      color: $drawer-text-color
      font-size: 12px
      font-weight: $heavy-font-weight
      text-shadow: none
      text-align: center
      line-height: 1em
      border-radius: 8px

@keyframes drawer-enter
  0%
    margin-left: -($drawer-width)
  100%
    margin-left: 0

.drawer.slide-enter
  animation: drawer-enter 200ms ease-out

@keyframes drawer-leave
  from
    margin-left: 0
  to
    margin-left: -($drawer-width)

.drawer.slide-leave
  animation: drawer-leave 200ms ease-in
