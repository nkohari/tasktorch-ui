.modal
  position: absolute
  max-width: 400px
  top: 50%
  left: 50%
  margin: 0px auto
  z-index: 10000

.modal-content
  padding: 10px
  border: 2px solid $black
  background: $white
  z-index: 10000

.modal-shadow
  position: fixed
  top: 0
  left: 0
  height: 100%
  width: 100%
  background: shadow(50%)
  z-index: 9999
