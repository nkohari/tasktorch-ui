.sidebar
  position: absolute
  top: $header-height
  left: 0
  vertical-align: top
  width: $sidebar-width
  height: 100%
  z-index: 1000
  background: $normal
  margin: 0
  margin-bottom: $logo-height
  overflow-x: hidden
  overflow-y: auto
  white-space: normal
  
  .group
    
    .header
      font-size: 12px
      line-height: 20px;
      padding: 4px 8px
      font-weight: 600
      text-transform: uppercase
      color: $sidebar-text-color
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5)

  ul
    margin: 0px
    padding: 0px
    list-style-type: none
    
    li a
      display: block
      font-size: 13px
      line-height: 20px;
      padding: 6px 8px
      color: $sidebar-text-color
      border-left: 6px solid transparent
      text-decoration: none
      transition: all $activate-animation-delay linear
      
      &.active
        color: $sidebar-active-text-color
        background: $sidebar-active-background-color
        border-left: 6px solid $active-marker-color
        .icon { color: $sidebar-active-text-color }

      .icon
        margin-right: 4px;
        color: $sidebar-item-icon-color
        transition: all $activate-animation-delay linear
