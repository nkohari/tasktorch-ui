.sidebar
  position: absolute
  top: 0
  left: 0
  z-index: 1000
  height: 100%
  width: $sidebar-width + $content-margin
  margin: 0
  padding: $corner-height 0
  overflow-x: hidden
  overflow-y: auto

.sidebar > .menu
  
  section
    
    header
      font-size: 13px
      padding: 8px 10px 4px
      font-weight: $bold-font-weight
      text-transform: uppercase
      color: $sidebar-header-text-color
      text-shadow: 1px 1px 0 $dark-black

    ul
      margin: 0px
      padding: 0px
      list-style-type: none
      
      li a
        display: block
        font-size: 14px
        line-height: 20px;
        padding: 6px 8px
        color: $sidebar-text-color
        border-left: 6px solid transparent
        text-decoration: none
        text-shadow: 1px 1px 0 $dark-black
        transition-property: color, background
        transition-duration: $hover-animation-delay
        &:hover, &:active
          color: $white
          .icon { color: $white }
        
        &.active
          color: $sidebar-active-text-color
          background: $sidebar-active-background-color
          border-left: 6px solid $active-marker-color

        .icon
          margin-right: 4px

        .count
          display: inline-block
          min-width: 20px
          margin-left: 10px
          padding: 3px 7px
          background: shadow(50%)
          color: $sidebar-text-color
          font-weight: $bold-font-weight
          text-shadow: none
          text-align: center
          line-height: 1em
          border-radius: 8px
