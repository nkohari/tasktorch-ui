.sidebar
  flex: none
  height: 100%
  width: $sidebar-width
  margin: 0
  margin-left: -($content-margin)
  padding: 0
  overflow-x: hidden
  overflow-y: auto

  .group
    
    .header
      font-size: 13px
      padding: 8px 10px 4px
      font-weight: $bold-font-weight
      text-transform: uppercase
      color: $sidebar-header-text-color
      text-shadow: 1px 1px 0 $dark-black

    ul
      margin: 0px
      padding: 0px
      list-style-type: none
      
      li a
        display: block
        font-size: 14px
        line-height: 20px;
        padding: 6px 8px
        color: $sidebar-text-color
        border-left: 6px solid transparent
        text-decoration: none
        text-shadow: 1px 1px 0 $dark-black
        transition-property: color, background
        transition-duration: $hover-animation-delay
        &:hover, &:active
          color: $white
          .icon { color: $white }
        
        &.active
          color: $sidebar-active-text-color
          background: $sidebar-active-background-color
          border-left: 6px solid $active-marker-color

        .icon
          margin-right: 4px

        .count
          display: inline-block
          min-width: 30px
          margin-left: 10px
          float: right
          padding: 3px 7px
          background: shadow(50%)
          color: $sidebar-text-color
          font-weight: $bold-font-weight
          text-shadow: none
          text-align: center
          line-height: 1em
          border-radius: 8px

@keyframes sidebar-enter
  0%
    margin-left: -($sidebar-width + $content-margin)
  100%
    margin-left: -($content-margin)

.sidebar.slide-enter
  animation: sidebar-enter 300ms ease-out

@keyframes sidebar-leave
  from
    margin-left: -($content-margin)
  to
    margin-left: -($sidebar-width + $content-margin)

.sidebar.slide-leave
  animation: sidebar-leave 150ms ease-in
