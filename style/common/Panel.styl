.panel
  position: relative
  flex: none
  height: 100%
  display: flex
  flex-direction: column
  vertical-align: top
  box-shadow: 0px 1px 3px shadow(30%)
  margin-right: $panel-margin

  &.ui-sortable-helper
    display: block
    cursor: move

  .close
    display: block
    position: absolute
    z-index: $trigger-layer
    right: 4px
    top: 8px
    font-size: 14px
    color: $close-link-color
    transition: color $hover-animation-delay linear
    &:hover { color: $close-link-hover-color }
