.content > .panel
  position: relative
  flex: none
  height: 100%
  display: flex
  flex-direction: column
  vertical-align: top
  overflow: hidden
  box-shadow: 0px 2px 3px rgba(0, 0, 0, 0.3)
  margin-right: $panel-margin

  .close
    display: block
    position: absolute
    z-index: 1001
    right: 6px
    top: 6px
    color: $close-link-color
    transition: color $hover-animation-delay linear
    &:hover { color: $close-link-hover-color }
