.input
  position: relative
  width: 100%
  
  input[type=text], input[type=password], textarea
    width: 100%
    padding: 4px
    background: $color-white
    border: 1px solid $color-steel
    outline: none !important
    &:focus { border: 1px solid $color-steel-dark }
  
  input[type=checkbox], input[type=radio]
    margin-right: 6px
  
  &.has-left-icon
    input { padding-left: 26px }
    .input-placeholder { left: 28px }
  
  &.has-right-icon
    input { padding-right: 26px }
  
  i
    position: absolute
    color: $color-ink-light
    margin-right: 0
    top: 6px
    &.left-icon { left: 6px }
    &.right-icon { right: 6px }
        
  .input-placeholder
    position: absolute
    top: 4px
    left: 6px
    font-size: 0.875em
    line-height: 1.5em
    font-style: italic
    font-weight: $bold-font-weight
    color: $color-ink-subtle
    pointer-events: none
