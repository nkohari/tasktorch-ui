.screen
  display: flex
  height: 100%
  width: 100%
  background: $white

.screen > .content
  position: relative
  z-index: 10001
  flex: 1
  display: flex
  height: 100%
  padding: $content-margin
  background: $bright-white url('/img/bg.png')
  overflow-x: auto
  overflow-y: hidden
  
  &::-webkit-scrollbar
    height: 20px
    
  &::-webkit-scrollbar-track
    background: transparent
    
  &::-webkit-scrollbar-thumb
    background: rgba(0, 0, 0, 0.3)
    background-clip: content-box
    border: 5px solid transparent
    border-radius: 20px

  .drag-placeholder
    background: $steel-lowlight-color

@keyframes screen-enter
  from
    opacity: 0
  to
    opacity: 1

.screen.navigate-enter
  animation: screen-enter 500ms ease-out

@keyframes screen-leave
  from
    opacity: 1
  to
    opacity: 0

.screen.navigate-leave
  animation: screen-leave 500ms linear
