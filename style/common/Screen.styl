.screen
  display: flex
  overflow: hidden
  height: 100%
  padding-top: $shell-header-height
  padding-bottom: $shell-footer-height

.screen > .content
  position: relative
  z-index: $panel-layer
  flex: 1
  display: flex
  height: 100%
  padding: $content-margin
  transform: translateZ(0)
  
  &::-webkit-scrollbar
    height: 20px
    width: 20px
    
  &::-webkit-scrollbar-thumb
    border: 5px solid transparent
    border-radius: 20px

  .drag-placeholder
    border: 2px dotted rgba(0, 0, 0, 0.2)
    background: $steel-lowlight-color

@keyframes screen-enter
  from
    opacity: 0
    transform: translateX(-20px)
  to
    opacity: 1
    transform: translateX(0)

.screen.navigate-enter
  animation: screen-enter 250ms ease-out

@keyframes screen-leave
  from
    opacity: 1
    transform: translateX(0)
  to
    opacity: 0
    transform: translateX(20px)

.screen.navigate-leave
  animation: screen-leave 250ms ease-in
