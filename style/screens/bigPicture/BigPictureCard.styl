.big-picture-card
  padding: 8px
  margin-bottom: 6px
  
  for $name, $color in $semantic-colors-background
    &.{$name}
      background: $color
      border: 1px solid $semantic-colors-border[$name]
      .controls
        color: $semantic-colors-border[$name]
        .trigger:hover { color: $semantic-colors-foreground[$name] }
      .big-picture-card-action
        border-color: $semantic-colors-border[$name]
        background: $semantic-colors-medium[$name]

  .card-summary
    display: flex
    flex-direction: row
    
    .card-owner
      flex: none
      width: 48px
      height: 48px
      padding: 2px
      margin-right: 8px
      border: 1px solid $color-steel-medium
      border-radius: 6px
      background: $color-white
      
      & > i
        color: $color-steel-medium
        font-size: 42px
        line-height: 40px
        width: 42px
    
    .card-info
      flex: 1
    
    .controls
      flex: none
      margin-top: 4px
      .trigger
        display: inline-block
        margin-right: 4px
        margin-bottom: 6px
        transition: color $hover-animation-delay linear
        &:last-child { margin-right: 0 }
        & > i { margin-right: 0 }
      
    .title
      font-size: 18px
      font-weight: $bold-font-weight
      line-height: 26px
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap

    .location
      font-size: 14px
      font-weight: $bold-font-weight
      color: $color-ink-light
      i { margin-right: 4px }
  
  .big-picture-card-action-list
    margin-top: 8px
    &.empty { display: none }