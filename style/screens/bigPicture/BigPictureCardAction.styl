.big-picture-card-action
  display: flex
  flex-direction: row
  border-top: 1px solid
  
  .owner
    flex: none
    margin-right: 8px
    .avatar
      height: 24px
      width: 24px
      border-radius: 3px
      margin-top: 6px
    & > i
      color: $color-ink-subtle
      width: 26px
      margin-top: 12px
      margin-right: 0
    
  .status
    flex: none
    margin-left: 8px
    & > i
      margin-right: 0
      margin-top: 10px
      
  .stage
    flex: none
    color: $color-ink-light
    font-size: 13px
    font-weight: $bold-font-weight
    line-height: 17px
    margin: 6px 0 6px 6px
    padding: 2px 6px
    border-radius: 4px
    background: $color-steel
    
  .text
    flex: 1
    font-size: 15px
    line-height: 1.3em
    margin: 8px
  
  &.inprogress
    color: $color-good !important
    background: $color-good-light !important

  &.warning
    color: $color-bad !important
    background: $color-bad-light !important
