.kind.panel
  flex: 1
  margin-right: 0px
  margin-bottom: 10px
  min-height: 344px
  background: $panel-background-color
  border: 1px solid $panel-border-color
  z-index: $panel-layer
  
  &:last-child
    margin-bottom: 0

  & > .footer
    padding: 8px 10px
    background: linear-gradient(to bottom, $steel-highlight-color, $steel-lowlight-color)
    border-top: 1px solid $steel-light-border-color
      
  .columns
    width: 100%
    height: 100%
    display: flex
    flex-direction: row
    overflow-x: auto
    