.following-card
  margin-bottom: 6px
  
  for $name, $color in $semantic-colors-background
    &.{$name}
      background: $color
      border: 1px solid $semantic-colors-border[$name]
      .controls
        color: $semantic-colors-border[$name]
        .trigger:hover { color: $semantic-colors-foreground[$name] }
          
  & > .content
    display: flex
    width: 100%
    padding: 6px 8px
    text-decoration: none
    transition: background $activate-animation-delay linear

    .card-owner
      flex: none
      width: 48px
      height: 48px
      padding: 2px
      border: 1px solid $color-steel-medium
      border-radius: 6px
      background: $color-white
          
      & > i
        color: $color-steel-medium
        font-size: 30px
        line-height: 30px
      
    .card-info
      flex: 1
      margin-top: 2px
      margin-left: 8px
      
      .title
        color: $color-ink
        font-size: 16px
        font-weight: $bold-font-weight
        line-height: 24px
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap

      .widgets
        display: flex
        flex-direction: row
        color: $color-ink-light
        font-weight: $bold-font-weight
        font-size: 13px
        i { font-size: 14px }

    .controls
      flex: none
      margin-top: 4px
      .trigger
        display: block
        margin-bottom: 6px
        transition: color $hover-animation-delay linear
        & > i { margin-right: 0 }
