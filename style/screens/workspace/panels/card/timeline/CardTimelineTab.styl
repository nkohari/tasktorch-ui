.card-timeline-tab
  flex: 1
  overflow-y: auto
  font-size: 16px
  background: $panel-background-color
  user-select: text
  transform: translateZ(0)

  .card-notes
    position: relative
    z-index: 0
    background: $bright-white
    padding-bottom: 10px
    border-bottom: 2px solid #eee
  
    &::before
      display: block
      content: ""
      position: absolute
      top: 0
      left: 23px
      height: 100%
      width: 2px
      background: #eee
      z-index: -1
