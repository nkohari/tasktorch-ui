.card-action-status
  position: relative
  flex: none
  cursor: pointer
  margin-right: 10px
  
  & > i
    margin-right: 0
    margin-top: 12px

  .overlay
    cursor: normal
    width: 250px
    .right { float: right }
  
.card-action.notstarted .card-action-status
  color: $color-ink

.card-action.inprogress .card-action-status
  color: $color-good

.card-action.complete .card-action-status
  color: $color-ink-light

.card-action.warning .card-action-status
  color: $color-bad
