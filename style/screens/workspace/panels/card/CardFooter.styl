.card-footer
  flex: none
  z-index: $panel-layer
  padding: 8px
  background: linear-gradient(to bottom, $steel-highlight-color, $steel-lowlight-color)
  border-top: 1px solid $steel-light-border-color
  line-height: 0
  
  .left-buttons
    display: inline-block
    vertical-align: middle
    margin: 0 6px 0 0

  .right-buttons
    float: right
    display: inline-block
    vertical-align: middle
    margin: 0 0 0 6px
