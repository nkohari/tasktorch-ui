.command-backdrop
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  display: flex
  align-items: flex-end
  justify-content: center
  background: linear-gradient(to bottom, white(50%) 0%, white(100%) 75%)
  padding: 20px

  &.slide-enter
    animation: command-backdrop-enter 150ms ease-out
    .command-overlay
      z-index: $panel-animation-layer
      animation: command-enter 150ms ease-out
    
  &.slide-leave
    animation: command-backdrop-leave 100ms linear
    .command-overlay
      z-index: $panel-animation-layer
      animation: command-leave 100ms linear
  
.command-overlay
  width: 100%
  display: flex
  flex-direction: column
  background: $color-paper
  border: 1px solid $color-steel-dark
  box-shadow: 0 0 5px black(50%)

  & > .content
    flex: 1
    padding: 14px
    border-bottom: 1px solid $color-steel
    
    .prompt
      font-size: 16px
      font-weight: $bold-font-weight
      margin-bottom: 8px
    
    .arguments
      margin-bottom: 8px
  
  & > .buttons
    flex: none
    display: flex
    justify-content: flex-end
    padding: 8px 14px
    border-bottom: 1px solid $color-steel
    background: $color-steel-light
    border-top: 1px solid $color-steel-verylight
    button
      padding: 4px 8px
 
@keyframes command-backdrop-enter
  from
    opacity: 0
  to
    opacity: 1

@keyframes command-backdrop-leave
  from
    opacity: 1
  to
    opacity: 0
       
@keyframes command-enter
  from
    opacity: 0
    margin-bottom: -100px
  to
    opacity: 1
    margin-bottom: 0px

@keyframes command-leave
  from
    opacity: 1
    margin-bottom: 0px
  to
    opacity: 0
    margin-bottom: -100px
