.card-header
  
  for $name, $color in $semantic-colors-background
    &.{$name}
      background: $color
      .follow-toggle
        color: $semantic-colors-border[$name]
        &:hover { color: $semantic-colors-foreground[$name] }
  
  display: flex
  flex: none
  background: $color-steel
  border-bottom: 1px solid $color-steel-dark

  .card-owner
    flex: none
    height: 54px
    width: 54px
    font-size: 48px
    line-height: 46px
    margin: 8px
        
  .card-info
    flex: 1
    padding: 10px 0 4px
    
.card.complete, .card.deleted
  .card-header
    for $name, $color in $semantic-colors-background
      $alt = $color-steel-light
      &.{$name}
        background: linear-gradient(to bottom right, $color 25%, $alt 25%, $alt 50%, $color 50%, $color 75%, $alt 75%, $alt);
        background-size: 24px 24px
