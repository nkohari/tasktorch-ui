$color-names   = ('red' 'pink' 'purple' 'deeppurple' 'indigo' 'blue' 'lightblue' 'cyan' 'teal' 'green' 'lightgreen' 'lime' 'yellow' 'amber' 'orange' 'deeporange' 'brown' 'grey' 'bluegrey')
$color-weights = (50 100 200 300 400 500 600 700 800 900 A100 A200 A300 A400)

for $name in $color-names
  for $weight, $index in $color-weights
    define('$color-' + $name + '-' + $weight, $color-table[$name][$index])

theme-color(name, weight = 500)
  lookup('$color-' + name + '-' + weight)

