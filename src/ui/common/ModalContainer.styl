.modal-container
  height: 100%
  width: 100%
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  
  & > .content
    position: relative
    overflow: hidden
    width: 100%
    height: 80%
    display: flex
    flex-direction: row
    border-top: 1px solid $color-steel
    border-bottom: 1px solid $color-steel
    background: $color-white
    box-shadow: 0 0 10px black(20%)
    justify-content: center
