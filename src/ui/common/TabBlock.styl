.tab-block
  display: flex
  flex-direction: column
  
  & > .header
    flex: none
    color: $color-ink-light
    background: $color-steel-light
    border-bottom: 1px solid $color-steel-medium
    display: flex
    flex-direction: row
      
    .tab
      flex: none
      cursor: pointer
      font-size: 12px
      padding: 4px 12px
      font-weight: $heavy-font-weight
      text-transform: uppercase
      border-right: 1px solid $color-steel-medium
      
      &.active
        color: $color-ink
        background: $color-steel

  & > .content
    flex: 1
    min-height: 0px
    overflow-y: auto
