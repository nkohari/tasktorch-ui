.suggesting-selector
  position: relative

  .selector-input
    border: 1px solid $color-steel
    border-radius: 4px
    background: $color-white
    box-shadow: 0 1px 0 black(10%)
    outline: none
  
  &.expanded
    .selector-input
      border-bottom-left-radius: 0px
      border-bottom-right-radius: 0px
  
  .selector-trigger
    cursor: pointer
    border: 1px solid $color-steel
    border-radius: 4px
    background: $color-white
    box-shadow: 0 1px 0 black(10%)
    outline: none
    
    &:focus
      background: $color-selection
      border: 1px solid $color-steel-dark
      outline: none
    
    & > i
      position: absolute
      right: 4px
      top: 8px
      color: $color-ink-light
      transition: color $hover-animation-delay ease
    
    &:hover
      & > i
        color: $color-ink
  
  .selector-options
    position: absolute
    z-index: $floating-layer
    width: 100%
    border: 1px solid $color-steel-dark
    background: $color-white
    margin-top: -1px
    border-bottom-left-radius: 4px
    border-bottom-right-radius: 4px
    
    .selector-option
      cursor: pointer
      padding: 6px 8px
      &.highlighted { background: $color-selection }
