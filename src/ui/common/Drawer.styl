@import '~Theme.styl'

.drawer-container
  height: 100%

.drawer
  flex: none
  height: 100%
  width: $drawer-width
  margin: 0
  padding: 6px
  overflow-y: auto
  overflow-x: visible
  background: $color-charcoal
  
  &.slide-enter { animation: drawer-enter 200ms ease-out }
  &.slide-leave { animation: drawer-leave 200ms ease-in }

  .tab-block
    
    & > .header
      font-size: 13px
      display: flex
      flex-direction: row
      .tab
        flex: 1
        text-align: center

  .drawer-group
    
    .header
      display: flex
      flex-direction: row
      padding: 8px 4px
      color: $color-ink-inverted
      
      .title
        flex: 1
        font-size: 13px
        font-weight: $bold-font-weight
        letter-spacing: 0.25px
        text-transform: uppercase
        text-shadow: 1px 1px 1px black(70%)
      
      .trigger
        flex: none
        cursor: pointer
        color: $color-ink-inverted-light
        transition-property: color
        transition-duration: $hover-animation-delay
        &:hover, &.active { color: $color-ink-inverted }
        & > i
          margin-right: 0
          line-height: 16px
  
  .drawer-item
    display: block
    font-size: 14px
    line-height: 20px
    padding: 4px
    margin-bottom: 6px
    color: $color-ink-inverted-light
    border-radius: 4px
    text-decoration: none
    transition-property: color, background
    transition-duration: $hover-animation-delay
    & > i { margin-right: 8px }
    
    &:hover, &:active
      color: $color-ink-inverted
    
    &.active
      color: $color-ink-inverted
      background: $color-charcoal-light

    .count
      min-width: 30px
      margin-left: 10px
      float: right
      padding: 4px 7px
      background: $color-charcoal-dark
      font-size: 12px
      font-weight: $heavy-font-weight
      text-shadow: none
      text-align: center
      line-height: 1em
      border-radius: 8px

@keyframes drawer-enter
  0%
    margin-left: -($drawer-width)
  100%
    margin-left: 0

@keyframes drawer-leave
  from
    margin-left: 0
  to
    margin-left: -($drawer-width)
