.overlay.menu
  min-width: 120px
  padding: 0
  color: $color-ink
  
  &.fixed
    position: fixed
  
  i
    margin-right: 6px
    
  .menu-item a
    display: block
    font-size: 14px
    font-weight: $bold-font-weight
    padding: 6px 10px 6px 8px
    white-space: nowrap
    
    &:hover, &.hover
      background: $color-selection
