.date-picker
  
  .top
    display: flex
    .input
      margin-right: 6px

  .DayPicker
    margin-top: 6px
    background: $color-white
    border: 1px solid $color-steel
    display: flex
    flex-wrap: wrap
    justify-content: center
    position: relative
    padding: 10px 0
    user-select: none
    outline: none
    
    .DayPicker-Month
      display: table
      border-collapse: collapse
      border-spacing: 0
      user-select: none
    
    .DayPicker-NavBar
      position: absolute
      left: 0
      right: 0
    
    .DayPicker-NavButton
      position: absolute
      top: 4px
      width: 12px
      height: 12px
      background-repeat: no-repeat
      background-position: center
      background-size: contain
      cursor: pointer
      
    .DayPicker-NavButton--prev
      left: 10px
      background-image: url("data:image/svg+xml;base64,")
    
    .DayPicker-NavButton--next
      right: 10px
      background-image: url("data:image/svg+xml;base64,")
    
    .DayPicker-Caption
      display: table-caption
      font-weight: $heavy-font-weight
      text-align: center
    
    .DayPicker-Weekdays
      display: table-header-group
    
      .DayPicker-WeekdaysRow
        display: table-row
        
        .DayPicker-Weekday
          display: table-cell
          padding: 5px
          font-size: 12px
          font-weight: $bold-font-weight
          text-align: center
          color: $color-ink-light
          
          abbr
            border: 0
    
    .DayPicker-Body
      display: table-row-group
      
      .DayPicker-Week
        display: table-row
        
        .DayPicker-Day
          display: table-cell
          width: 26px
          height: 26px
          border: 1px solid $color-steel-light
          font-size: 14px
          font-weight: $bold-font-weight
          text-align: center
          cursor: pointer
          vertical-align: middle
          outline: none

  .DayPicker--interactionDisabled .DayPicker-Day
    cursor: default

  .DayPicker-Day--selected
    font-weight: $heavy-font-weight
    background: yellow(100) !important
    
  .DayPicker-Day--today
    font-weight: $heavy-font-weight
    background: green(50)

  .DayPicker-Day--disabled
    color: $color-ink-light
    cursor: default
    background: $color-steel-light
  
  .DayPicker-Day--outside
    color: $color-ink-light
    background: $color-steel-verylight
