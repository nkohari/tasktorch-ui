.panel-section
  flex: none
  padding: 10px
  border-top: 1px solid $color-white
  border-bottom: 1px solid $color-steel-light
  
  &:last-child
    flex: 1
    border-bottom: none
  
  .header
    display: flex
    padding-bottom: 10px
    
    & > i
      color: $color-ink-light
    
    .title
      flex: 1
      color: $color-ink
      font-size: 16px
      font-weight: $bold-font-weight
