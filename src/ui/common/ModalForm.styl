.modal-form
  align-self: center
  display: flex
  flex-direction: column
  width: 400px
  background: $color-paper
  border: 1px solid $color-steel-medium
  border-radius: 4px
  box-shadow: 0 1px 3px black(30%)
  
  .form-content
    padding: 20px 20px 10px 20px
    flex: 1
    border-bottom: 1px solid $color-steel
  
  .form-note
    padding-bottom: 20px
    font-size: 14px
    font-style: italic
    font-weight: $bold-font-weight
    color: $color-ink-light

  .form-buttons
    display: flex
    align-items: center
    padding: 20px
    background: $color-steel-light
    border-top: 1px solid $color-steel-verylight
    border-bottom-left-radius: 4px
    border-bottom-right-radius: 4px
    .divider
      font-style: italic
      color: $color-ink-light
      padding: 0 16px
    
  .form-note, .form-buttons
    a
      font-size: 14px
      color: $color-link
      text-decoration: underline
      transition: all $hover-animation-delay linear
      &:hover
        color: $color-link-active