.dialog-footer
  flex: none
  display: flex
  padding: 8px 14px
  background: $color-steel-light
  border-top: 1px solid $color-steel-verylight
  border-bottom-left-radius: 6px
  border-bottom-right-radius: 6px

  .dialog-footer-left
    flex: 1
    display: flex
    justify-content: flex-start
  
  .dialog-footer-right
    flex: 1
    display: flex
    justify-content: flex-end
