.callout
  position: absolute
  z-index: 101
  top: 0
  left: 0
  width: 100%
  height: 100%
  
  .callout-content
    position: absolute
    box-shadow: 0 0 20px black(80%)
  
  .callout-caption
    position: absolute
    color: $color-ink-inverted
    font-size: 20px
    line-height: 22px
    max-width: 450px
    background: black(100%)
    padding: 10px
    border: 2px solid $color-white
    border-radius: 10px
    em
      font-style: normal
      font-weight: $heavy-font-weight
    p
      margin: 0 0 20px 0
      &:last-child
        margin-bottom: 0
  
  &.fade-appear
    animation: callout-enter 500ms ease
  &.fade-enter
    animation: callout-enter 500ms ease
  &.fade-leave
    animation: callout-leave 500ms ease

@keyframes callout-enter
  0%
    opacity: 0
  100%
    opacity: 1

@keyframes callout-leave
  0%
    opacity: 1
  100%
    opacity: 0
