.action-owner-overlay
  width: 200px
  padding: 6px
  background: $color-paper
  margin-top: 3px !important
  
  .input
    font-size: 16px
    line-height: 16px
    color: $color-ink
    
    input
      border: 1px solid $color-steel
      border-radius: 4px
      background: $color-white
      box-shadow: 0 1px 0 black(10%)
      outline: none
      
  .user-list
    display: flex
    flex-direction: column
    background: $color-white
    border: 1px solid $color-steel
    margin-top: 6px
