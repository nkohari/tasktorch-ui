.change-kind-workflow-stage
  margin: 8px
  
  & > .header
    display: flex
    flex-direction: row
    
    .stage-name
      flex: 1
      display: flex
      flex-direction: row
      
      input
        font-size: 16px
        font-weight: $bold-font-weight
      
      & > i
        cursor: move
        color: $color-ink-light
        line-height: 30px
        margin-right: 0

    .trigger
      position: relative
      margin-left: 4px
      color: $color-ink-light
      transition: color $hover-animation-delay linear
      &:hover { color: $color-ink }
      & > i
        margin-right: 0
        line-height: 30px
  
  .action-list
    margin: 8px 0

  .action
    cursor: move
    background: $color-steel-light
    border: 1px solid $color-steel
    border-top: none
    &:first-child { border-top: 1px solid $color-steel }
    
    .action-content
      cursor: auto
      margin-left: 8px
      border-left: 1px solid $color-steel
      background: $color-white
      display: flex
      flex-direction: row
      
      .input
        flex: 1
        margin: 6px 10px 2px 8px
        textarea
          font-size: 16px

      .delete-action
        margin-right: 8px
        line-height: 38px
        color: $color-ink-light
        transition: color $hover-animation-delay linear
        &:hover { color: $color-ink }
        & > i { margin-right: 0 }
