.change-kind-workflow-stage
  padding: 8px
  margin: 8px
  background: $color-white
  border: 1px solid $color-steel
  box-shadow: 1px 1px 0 black(10%)
  
  &.ui-sortable-helper
    border: 1px solid $color-steel-dark
    box-shadow: 1px 1px 3px black(30%)
    
  & > .header
    display: flex
    flex-direction: row
    
    .stage-name
      flex: 1
      display: flex
      flex-direction: row
      
      input
        font-size: 16px
        font-weight: $bold-font-weight
      
      & > i
        cursor: move
        color: $color-ink-light
        line-height: 30px
        margin-right: 0

    .trigger
      position: relative
      margin-left: 4px
      color: $color-ink-light
      transition: color $hover-animation-delay linear
      &:hover { color: $color-ink }
      & > i
        margin-right: 0
        line-height: 30px
