.change-kind-workflow-action-list
  margin: 4px 0 8px 0
  
  & > .drag-placeholder
    background: $color-selection
    border: 1px dashed $color-steel-medium
    
.change-kind-workflow-action
  cursor: move
  background: $color-steel-light
  border: 1px solid $color-steel
  border-top: none
  box-shadow: 1px 1px 0 black(10%)
  &:first-child { border-top: 1px solid $color-steel }

  &.ui-sortable-helper
    border: 1px solid $color-steel-dark
    box-shadow: 0 0 3px black(30%)
  
  .action-content
    cursor: auto
    margin-left: 8px
    border-left: 1px solid $color-steel
    background: $color-white
    display: flex
    flex-direction: row
    
    .input
      flex: 1
      margin: 6px 10px 2px 8px
      textarea
        font-size: 16px

    .delete-action
      margin-right: 8px
      line-height: 38px
      color: $color-ink-light
      transition: color $hover-animation-delay linear
      &:hover { color: $color-ink }
      & > i { margin-right: 0 }
