@import '~Theme.styl'

.kind-action-list
  padding: 0 6px
  background: $color-white
  min-height: 5px
  &.dragging { min-height: 42px }
    
  .drag-placeholder
    border: 1px dashed black(0.25)
    background: white(0.5)
    margin-bottom: 6px

.kind-action-list-item
  cursor: move
  background: $color-steel-light
  border: 1px solid $color-steel
  margin-bottom: 6px
  
  .action-content
    display: flex
    flex-direction: row
    background: $color-steel-verylight
    border-left: 1px solid $color-steel
    padding: 4px 6px
    margin-left: 10px
    
    & > i
      flex: none
      font-size: 20px
      line-height: 30px
      color: $color-ink-light
      margin-right: 0

    .input
      flex: 1
      input
        font-size: 16px
    
    .trigger
      margin-left: 4px
      line-height: 30px
      color: $color-ink-light
      transition: color $hover-animation-delay linear
      &:hover { color: $color-ink }
      & > i { margin-right: 0 }