.account-subscription-math
  font-size: 16px
  margin-top: 16px
  padding: 0 8px
  border: 1px solid $color-steel-light
  background: $color-steel-verylight
  
  .row
    display: flex
    flex-direction: row
    align-items: center
    height: 32px
    .label
      flex: 1
    .value
      font-weight: $bold-font-weight
      .operator
        color: $color-ink-subtle
        padding-right: 20px
    &.sum
      border-top: 1px solid $color-divider
      font-weight: $bold-font-weight
