.account-email
  display: flex
  flex-direction: row
  align-items: center
  margin: 8px 0
  padding: 8px
  border: 1px solid $color-steel-light
  background: $color-steel-verylight

  .account-email-info
    flex: 1
    .account-email-title
      font-size: 14px
      color: $color-ink-light
    .account-email-value
      font-size: 16px
      font-weight: $bold-font-weight