.help-dialog
  font-size: 16px
  line-height: 22px
  
  a
    color: $color-link
    text-decoration: underline
    transition: color $hover-animation-delay linear
    &:hover, &:active { color: $color-link-active }

  p
    margin: 0 0 10px 0
    &:last-child { margin-bottom: 0px }

  ul
    margin-bottom: 10px
    li
      margin-left: 30px
      list-style-type: disc
