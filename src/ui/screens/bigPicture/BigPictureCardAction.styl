.big-picture-card-action
  display: flex
  flex-direction: row
  padding: 0px 8px 4px 8px
  
  .status
    flex: none
    color: $color-ink-light
  
  &.warning
    .status { color: $color-bad }
    .text { color: $color-bad }  
    
  &.inprogress
    .status { color: $color-good }
    .text { color: $color-good }
      
  .text
    flex: 1
    font-size: 15px
    padding-right: 4px

  .stage
    flex: none
    color: $color-ink-light
    font-size: 13px
    font-weight: $bold-font-weight
    line-height: 17px
    padding: 2px 6px
    border-radius: 4px
    background: $color-steel-light
    align-self: flex-start
