.card-timeline-tab
  display: flex
  flex-direction: column
  position: relative
  z-index: 0
  font-size: 16px
  background: $color-white
  user-select: text

  &::before
    display: block
    content: ""
    position: absolute
    top: 0
    left: 23px
    height: 100%
    width: 2px
    background: $color-divider
    z-index: -1

  .card-notes
    flex: 1
    padding-bottom: 10px
    transform: translateZ(0)
