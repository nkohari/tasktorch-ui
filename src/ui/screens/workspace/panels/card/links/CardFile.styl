.card-file
  flex: none
  margin: 0 12px 12px 0
  
  .card-file-preview
    position: relative
    display: flex
    justify-content: center
    align-items: center
    border: 1px solid $color-steel
    box-shadow: 1px 1px 2px black(10%)
    width: 114px
    height: 114px
    margin-bottom: 4px
    
    img
      width: 100%
      height: 100%

  .card-file-caption
    font-size: 16px
    line-height: 24px
    width: 114px

  .card-file-overlay
    opacity: 0
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: black(50%)
    transition: opacity $hover-animation-delay ease
    padding: 4px
    z-index: 3
    &.can-lightbox
      cursor: zoom-in
    a
      position: absolute
      top: 4px
      &.remove
        left: 4px
      &.download
        right: 4px
    i
      cursor: pointer
      margin: 0
      font-size: 24px
      line-height: 24px
      color: $color-white
      text-shadow: 1px 1px 1px black(40%)
  
  &:hover
    .card-file-overlay
      opacity: 1

