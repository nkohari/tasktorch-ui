.card.panel
  position: relative
  background: $color-paper
  width: $normal-panel-width
  min-width: $normal-panel-width
  
  .attach-files-overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: linear-gradient(to bottom, white(50%) 0%, white(80%) 50%, white(50%) 100%)
    display: flex
    justify-content: center
    align-items: center
    font-size: 16px
    font-weight: $bold-font-weight
  
  &.slide-enter
    animation: card-enter 250ms ease-out
    z-index: $panel-animation-layer
    
  &.slide-leave
    animation: card-leave 200ms linear
    z-index: $panel-animation-layer  

@keyframes card-enter
  0%
    opacity: 0
    margin-left: -($normal-panel-width + $panel-margin)
    margin-right: $panel-margin
  50%
    opacity: 0
    margin-left: -($normal-panel-width + $panel-margin)
    margin-right: $normal-panel-width + $panel-margin
  100%
    opacity: 1
    margin-left: 0
    margin-right: $panel-margin

@keyframes card-leave
  from
    opacity: 1
    margin-left: 0
  to
    opacity: 0
    margin-left: -($normal-panel-width + $panel-margin)
