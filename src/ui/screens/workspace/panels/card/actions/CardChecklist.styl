@import '~Theme.styl'

.card-checklist
  flex: none
  padding: 10px
  border-top: 1px solid $color-white
  border-bottom: 1px solid $color-steel-light
  
  &:last-child
    flex: 1
    border-bottom: none
  
  .header
    display: flex
    padding-bottom: 10px
    
    & > i
      color: $color-ink-light
    
    .title
      flex: 1
      color: $color-ink
      font-size: 16px
      font-weight: $bold-font-weight

    .trigger
      position: relative
      flex: none
      cursor: pointer
      color: $color-ink-light
      transition: color $hover-animation-delay linear
      &:hover, &.active { color: $color-ink }
      & > i { margin-right: 0 }
